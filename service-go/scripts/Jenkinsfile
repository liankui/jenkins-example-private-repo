pipeline {
  agent any
  tools { go '1.17.6' }

  stages {
    stage('Build') {
      steps {
        echo 'build starting'
        sh 'go version'
        sh 'go build service-go/cmd/main.go'
      }
    }
    stage('Run') {
      steps {
        sh "nohup ./main 2&>1 &"
        echo 'done'
      }
    }
  }
}
