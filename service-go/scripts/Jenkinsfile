pipeline {
  agent any

  tools { go '1.17.6' }

  stages {
    stage('Build') {
      steps {
        echo 'build starting'
        sh 'go version'
        dir('service-go/cmd') {
            sh 'go version'
            sh './xbuild.sh'
            echo 'build done'

        }
        fileOperations {
            folderCopyOperation("service-go/cmd/cmd", "/opt/abfuzz")
        }
        echo 'build all done'
      }
    }
    stage('Run') {
      steps {
        //sh "nohup go run service-go/cmd/main.go 2>&1 &"
        echo 'done'
      }
    }
  }
}
