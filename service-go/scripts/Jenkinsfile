pipeline {
  agent any
  tools { go '1.17.6' }

  stages {
    stage('Build') {
      steps {
        echo 'build starting'
        sh 'go version'
        dir('service-go/cmd') {
            sh 'go version'
            sh 'env CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /opt/abfuzz'
            echo 'build done'
        }
        echo 'build all done'
      }
    }
    stage('Run') {
      steps {
        //sh "nohup go run service-go/cmd/main.go 2>&1 &"
        echo 'done'
      }
    }
  }
}
